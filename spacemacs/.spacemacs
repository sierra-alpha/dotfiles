  (add-hook 'web-mode-hook  'my-web-mode-hook)

  ;; yasnippet
  (yas-global-mode 1)

  ;; flycheck
  (global-flycheck-mode)
  (add-hook 'after-init-hook #'global-flycheck-mode)
