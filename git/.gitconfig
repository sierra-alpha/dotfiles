[init]
	defaultBranch = main
[user]
	name = Shaun Alexander
	email = shaun@sierraalpha.co.nz
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[push]
	autoSetupRemote = true
[pull]
	rebase = true
[fetch]
	prune = true
[diff]
	colorMoved = zebra

[alias]
	glog = log --all --oneline --decorate --graph --color -10

[url "git@github.com:"]
	insteadof = https://github.com/
[url "git://"]
	insteadOf = https://

[includeIF "gitdir:~/mdev/ripa/"]
  path = ~/mdev/ripa/.gitconfig_ripa