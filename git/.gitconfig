# gitconfig --global <some command> will change the file to be tabs
# So dont fight it...
#
[init]
	defaultBranch = main

[user]
	name = Shaun Alexander
	email = shaun@sierraalpha.co.nz
	signingkey = /Users/shaun/.ssh/id_ed25519.pub

[core]
	editor = vim
	excludesfile = ~/.gitignore_global

[submodule]
	recurse = true

[push]
	autoSetupRemote = true

[pull]
	rebase = true

[fetch]
	prune = true

[diff]
	colorMoved = zebra

[alias]
	glog = log --oneline --decorate --graph --color -10
	delete-origin-merged-branch = !git branch -d $(git branch --merged origin/develop --format '%(refname:short)')

[url "git@github.com:"]
	insteadOf = git://github.com/

[url "https://"]
	insteadOf = git://

[includeIF "gitdir:~/mdev/ripa/"]
	path = ~/mdev/ripa/.gitconfig_ripa

[gpg]
	format = ssh
